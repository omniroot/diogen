{
	"name": "diogen",
	"private": true,
	"version": "0.0.0",
	"type": "module",
	"scripts": {
		"analyzer": "bun run analyzer.ts",
		"preinstall": "git submodule sync --recursive || true",
		"prepare-submodules": "git submodule update --init --recursive",
		"dev": "vite dev --port 5173 --host",
		"preview": "vite preview --port 5173 --host",
		"build:pre": "npm run prepare-submodules && npm run typegen:chakra",
		"build": "npm run build:pre && tsc -b && vite build",
		"biome:format": "bunx biome format --write ./src/",
		"biome:lint": "bunx biome lint --write ./src/",
		"lf": "bun run biome:format && bun run biome:lint",
		"typegen": "bun run typegen:appwrite && bun run typegen:chakra",
		"typegen:appwrite": "bun appwrite pull tables && bun run appwrite types -l ts ./src/api/types/",
		"typegen:chakra": "chakra typegen ./src/theme/index.ts",
		"commit": "cz",
		"commit:lint": "commitlint --edit"
	},
	"lint-staged": {
		"*.{js,jsx,ts,tsx,json,md}": [
			"bun run biome:format",
			"bun run biome:lint"
		],
		"*.{css,scss}": [
			"bunx biome format --write"
		],
		"*.{ts,tsx}": [
			"bun run type-check --pretty false"
		]
	},
	"dependencies": {
		"@chakra-ui/cli": "^3.27.0",
		"@chakra-ui/react": "^3.27.0",
		"@emotion/react": "^11.14.0",
		"@siberiacancode/reactuse": "^0.2.35",
		"@tabler/icons-react": "^3.34.1",
		"@tanstack/react-form": "^1.25.0",
		"@tanstack/react-query": "^5.90.2",
		"@tanstack/react-query-devtools": "^5.90.2",
		"@tanstack/react-router": "^1.132.37",
		"@tanstack/router-plugin": "^1.132.37",
		"@tiptap/core": "^3.14.0",
		"@tiptap/extension-highlight": "^3.14.0",
		"@tiptap/extension-horizontal-rule": "^3.14.0",
		"@tiptap/extension-image": "^3.14.0",
		"@tiptap/extension-list": "^3.14.0",
		"@tiptap/extension-subscript": "^3.14.0",
		"@tiptap/extension-superscript": "^3.14.0",
		"@tiptap/extension-text-align": "^3.14.0",
		"@tiptap/extension-typography": "^3.14.0",
		"@tiptap/extensions": "^3.14.0",
		"@tiptap/pm": "^3.14.0",
		"@tiptap/react": "^3.14.0",
		"@tiptap/starter-kit": "^3.14.0",
		"appwrite": "^21.4.0",
		"appwrite-cli": "^12.0.0",
		"dayjs": "^1.11.19",
		"lightningcss": "^1.30.2",
		"lodash.throttle": "^4.1.1",
		"magic-string": "^0.30.19",
		"marked": "^17.0.1",
		"next-themes": "^0.4.6",
		"react": "^19.2.3",
		"react-calendar": "^6.0.0",
		"react-dom": "^19.2.3",
		"react-hook-form": "^7.64.0",
		"react-hotkeys-hook": "^5.2.1",
		"react-scan": "^0.4.3",
		"turndown": "^7.2.2",
		"unplugin-fonts": "^1.4.0",
		"vite-bundle-analyzer": "^1.2.3",
		"vite-plugin-compression": "^0.5.1",
		"zustand": "^5.0.8"
	},
	"devDependencies": {
		"@biomejs/biome": "^2.2.5",
		"@commitlint/cli": "^20.2.0",
		"@commitlint/config-conventional": "^20.2.0",
		"@types/lodash.throttle": "^4.1.9",
		"@types/node": "^24.6.2",
		"@types/react": "^19.2.0",
		"@types/react-dom": "^19.2.0",
		"@vitejs/plugin-react": "^5.0.4",
		"babel-plugin-react-compiler": "^19.1.0-rc.3",
		"commitizen": "^4.3.1",
		"cz-conventional-changelog": "^3.3.0",
		"globals": "^16.4.0",
		"husky": "^9.1.7",
		"lint-staged": "^16.2.7",
		"sass-embedded": "^1.97.1",
		"typescript": "~5.9.3",
		"vite": "^7.1.9"
	},
	"config": {
		"commitizen": {
			"path": "./node_modules/cz-conventional-changelog"
		}
	}
}
